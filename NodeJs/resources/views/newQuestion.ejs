<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('_partials/_head.ejs'); %>  
        <link rel="stylesheet" href="stylesheets/newQuestion.css">
    </head>
    <body>      
        <header id="header">
            <%- include('_partials/_header.ejs'); -%>  
        </header>

        
        <div id="area" class="container-fluid">
            <div id="left-space">   
                <div style="display: flex; justify-content: space-between;">
                    <div id="langs">
                        <button id="languages" class="visible btn btn-secondary mt-2" type="button">Mostrar idiomas</button>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingTopic" required>
                        <label for="floatingTopic">Tema</label>
                    </div>
                </div>     
                <div id="myMainFormContent" class="mb-1"></div>
                <div class="form-group d-flex align-items-center">
                    <select class="form-select mt-3" id="optionType">
                      <option>Radio</option>
                      <option>Checkbox</option>
                    </select>
                </div>                
            </div>
            
            <div id="right-space" class="hidden">      
                <div class="nav nav-tabs">
                    <ul id="tabList" class="nav" role="tablist"></ul>
                    <div id="addTabBar" class="input-group ">
                        <input type="text"  id="newTabName" class="form-control ms-3" placeholder="Nuevo idioma">
                        <button type="button" id="button-addon2" class="btn btn-primary">+</button>
                    </div>
                </div>
                <div id="myTabContent" class="tab-content"></div>
            </div>
        </div>
        <button id="submitButton" class="btn btn-primary ms-4" type="submit" value="Enviar">Enviar</button>

        <%- include('_partials/_footer.ejs'); -%>
        <script type="text/javascript" src="scripts/s_newQuestion.js"></script>
    </body>
</html>