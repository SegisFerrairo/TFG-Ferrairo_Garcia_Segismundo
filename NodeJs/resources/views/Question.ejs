<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('_partials/_head.ejs'); %>  
        <link rel="stylesheet" href="stylesheets/Question.css">
    </head>
    <body>      
        <header id="header">
            <%- include('_partials/_header.ejs'); -%>  
        </header>
                
        <div id="area" class="container-fluid">
            <div id="left-space">   
                <div style="display: flex; justify-content: space-between;">
                    <div id="langs">
                        <button id="languages" class="visible btn btn-secondary" type="button">Mostrar idiomas</button>
                    </div>
                    <form class="form-clasification">
                        <label id="resetDifficultyLabel" for="clasification">Dificultad de la pregunta</label>
                        <p id="clasification" class="clasification">
                          <input id="radio1" type="radio" name="stars" value="5">
                          <label for="radio1">★</label>
                          <input id="radio2" type="radio" name="stars" value="4">
                          <label for="radio2">★</label>
                          <input id="radio3" type="radio" name="stars" value="3">
                          <label for="radio3">★</label>
                          <input id="radio4" type="radio" name="stars" value="2">
                          <label for="radio4">★</label>
                          <input id="radio5" type="radio" name="stars" value="1" checked>
                          <label for="radio5">★</label>
                        </p>
                    </form>
                    <div class="form-floating">
                        <input type="search" class="form-control" id="floatingTopic" name="search" list="topics-list" required>
                        <label for="floatingTopic">Tema</label>
                        <datalist id="topics-list"></datalist>
                    </div> 
                </div>     
                <div id="myMainFormContent" class="mb-1"></div>
                <div class="form-group d-flex align-items-center">
                    <select class="form-select mt-3" id="optionType">
                      <option>Radio</option>
                      <option>Checkbox</option>
                    </select>
                </div>                
            </div>

            <div id="middle-space" class="centered">
                <div class="translate-container">
                    <span id="arrow-top" class="hidden"></span>
                    <button id="translate" class="btn btn-primary translate mt-1 mb-2 hidden" type="button"></button>
                    <span id="arrow-down" class="hidden"></span>
                </div>
            </div>
           
            <div id="right-space" class="hidden">      
                <div class="nav nav-tabs">
                    <ul id="tabList" class="nav" role="tablist"></ul>
                    <div id="addTabBar" class="input-group ">
                        <input type="search" id="newTabName" class="form-control ms-3" name="search" list="languages-list" placeholder="Nuevo idioma">
                        <datalist id="languages-list">
                        </datalist>
                        <button type="button" id="button-addon2" class="btn btn-primary">+</button>
                    </div>
                </div>
                <div id="myTabContent" class="tab-content"></div>
            </div>
        </div>
 
        <button id="submitButton" class="btn btn-primary ms-4 me-4" type="submit" value="Enviar">Enviar</button>

        <%- include('_partials/_footer.ejs'); -%>
        <script type="text/javascript" src="scripts/s_Question.js"></script>
    </body>
</html>