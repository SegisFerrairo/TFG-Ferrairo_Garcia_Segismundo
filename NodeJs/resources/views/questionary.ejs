<!DOCTYPE html>
 
<html lang="es">
    <head>
        <%- include('_partials/_head.ejs'); -%>       
        <link rel="stylesheet" href="stylesheets/questionary.css">
    </head>
    
    <body>
        <header id="header">
            <%- include('_partials/_header.ejs'); -%>  
        </header>
        
        <!-- Barra lateral -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h5>Cuestiones</h5>
                <!-- Create a divider -->

                <li class="border-top" style="list-style: none;"></li>
     
                <div>
                    <label for="csvFileInput" class="form-label ms-1 mt-3">
                        Importar cuestionario
                        <img src="images/file-earmark-arrow-up.svg" class="ms-3" alt="Subir archivo" style="width: 30px; height: 30px;">
                    </label>
                    <input class="form-control" style="display: none;" type="file" id="csvFileInput" accept=".csv">
                </div>
                <div>
                    <button type="sumbit" id="exportQuestionary" class="btn btn-primary">Exportar cuestionario</button>
                    <!-- Create a button to randomize questions order in folio -->
                    <button type="button" id="randomizeQuestions" class="btn btn-outline-primary ms-3"></button>
                </div>

            </div>
            <div class="sidebar-content">
                <ul id="sidebarQuestionsList" class="list-unstyled ps-0">
                    <li class="border-top my-3"></li>
                    <form class="form-clasification">
                        <label id="resetDifficultyLabel" for="clasification">Dificultad de preguntas</label>
                        <p id="clasification" class="clasification">
                          <input id="radio1" type="radio" name="stars" value="5">
                          <label for="radio1">★</label>
                          <input id="radio2" type="radio" name="stars" value="4">
                          <label for="radio2">★</label>
                          <input id="radio3" type="radio" name="stars" value="3">
                          <label for="radio3">★</label>
                          <input id="radio4" type="radio" name="stars" value="2">
                          <label for="radio4">★</label>
                          <input id="radio5" type="radio" name="stars" value="1" required>
                          <label for="radio5">★</label>
                        </p>
                    </form>
                    <li class="border-top my-3"></li>
                </ul>
            </div>
        </div>


        <!-- Contenido principal -->
        <div class="main-content">
            <div class="nav nav-tabs">
                <ul id="languagesTabList" class="nav" role="tablist">
                    <li id="languagesDropdown" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Idiomas</a>
                        <div class="dropdown-menu">
                          <h6 class="dropdown-header">Exportar a:</h6>
                          <form id="choosenLanguages">
                              <fieldset class="form-group ms-3 me-3"></fieldset>
                          </form>
                        </div>
                    </li>
                </ul>
            </div>
            <div id="myTabContent" class="tab-content mt-2"></div>
        </div>

        <%- include('_partials/_footer.ejs'); -%>
        <script type="text/javascript" src="scripts/s_questionary.js"></script>
    </body>
</html>